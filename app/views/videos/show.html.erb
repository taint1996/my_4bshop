<div class="row">
  <div class="col s3">
    <div class="collection">
      <% @videos.each do |video| %>
          <%= link_to video.wistia, video, class: "collection-item" %>
      <% end %>
    </div>
  </div>

  <div class="col s9">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= @video.title.present? ? @video.title : "To be update Title" %></span>
        <p><%= @video.description %></p>
      </div>
      <div class="card-action">
        <a href="#">Previous</a>
        <a href="#">Next</a>
      </div>
    </div>
  </div>
</div>
