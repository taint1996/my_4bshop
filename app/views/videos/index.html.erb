<p id="notice"><%= notice %></p>

<h1>Videos</h1>

<table>
  <thead>
    <tr>
      <th>Wistia</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td><%= video.wistia %></td>
        <td><%= video.title.present? ? video.title : "Waiting for update..." %></td>
        <td><%= video.description %></td>
        <td><%= link_to 'Show', video, class: "btn waves-effect waves-light" %></td>
        <td><%= link_to 'Edit', edit_video_path(video), class: "btn waves-effect waves-yellow" %></td>
        <td><%= link_to 'Destroy', video, method: :delete, class: "btn waves-effect waves-light red", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_video_path, class: "waves-effect waves-circle waves-light btn-floating" do %>
  <i class="material-icons">add</i> New button
<% end %>
